---
const prestasiData = [
  {
    nama: "RDO Team",
    title: "Juara Sipaling Innovasi",
    lokasi: "Universitas Islam Riau, Pekanbaru",
    gambar: "/globals/landing-pages/innovasi.jpg",
  },
  {
    nama: "RDO Team",
    title: "Juara Sipaling Innovasi",
    lokasi: "Universitas Islam Riau, Pekanbaru",
    gambar: "/globals/landing-pages/innovasi.jpg",
  },
  {
    nama: "RDO Team",
    title: "Juara Sipaling Innovasi",
    lokasi: "Universitas Islam Riau, Pekanbaru",
    gambar: "/globals/landing-pages/innovasi.jpg",
  },
];
---

<div class="min-h-screen py-16 px-6">
  
  <div class="text-center text-white mb-12">
    <h1 class="text-4xl font-bold text-blue-900 mb-4">Prestasi Mahasiswa Teknik Informatika</h1>
    <p class="mt-3 text-gray-600">
      Mewadahi talenta unggul dan menghasilkan prestasi gemilang
    </p>
  </div>

  <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">

    {prestasiData.map((item) => (
      <div class="bg-white/95 rounded-2xl shadow-lg overflow-hidden hover:scale-[1.02] transition transform duration-300">
        
        <!-- IMAGE -->
        <div class="relative">
          <img src={item.gambar} alt={item.title} class="w-full h-64 object-cover" />
          
          <!-- Overlay tulisan "CONGRATS" -->
          <div class="absolute inset-0 flex items-center justify-center opacity-20">
            <h1 class="text-[70px] font-extrabold text-white tracking-widest">
              CONGRATS
            </h1>
          </div>
        </div>

        <!-- CONTENT -->
        <div class="p-6 space-y-2">
          <p class="text-gray-500 text-sm">{item.nama}</p>

          <h2 class="text-lg font-semibold text-gray-800 leading-snug">
            {item.title}
          </h2>

          {item.lokasi && (
            <p class="text-gray-600 text-sm mt-1">{item.lokasi}</p>
          )}
        </div>

      </div>
    ))}

  </div>

</div>
