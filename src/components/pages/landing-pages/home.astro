<div class="relative min-h-screen flex items-center justify-center px-6 bg-white overflow-hidden">

  <!-- Background Image -->
  <img
    src="/landing-pages/gedung-faste.jpg"
    alt="Gedung FASTE"
    class="absolute inset-0 w-full h-full object-cover opacity-70"
  />

  <!-- Overlay -->
  <div class="absolute inset-0 bg-white/70 backdrop-blur-500  "></div>

  <!-- Decorative Gradient -->
  <div class="absolute top-0 left-0 w-full h-40 bg-gradient-to-b from-white to-transparent"></div>
  <div class="absolute bottom-0 left-0 w-full h-40 bg-gradient-to-t from-white to-transparent"></div>

  <!-- Content -->
  <div class="relative z-10 max-w-4xl text-center">

    <span class="inline-block px-5 py-1.5 rounded-full border border-green-700 text-green-700 text-sm font-semibold tracking-wide">
      Program Studi Teknik Informatika
    </span>

    <h1 class="mt-6 text-3xl md:text-5xl font-bold text-gray-900 leading-tight">
      Selamat Datang di  
      <span class="block text-green-800 mt-1">
        Teknik Informatika UIN Suska Riau
      </span>
    </h1>

    <p class="mt-6 text-gray-700 text-base md:text-lg leading-relaxed max-w-3xl mx-auto">
      Program Studi Teknik Informatika UIN Sultan Syarif Kasim Riau berkomitmen
      menghasilkan lulusan yang unggul, berakhlak, dan kompeten di bidang
      teknologi informasi melalui pendidikan, penelitian, dan pengabdian
      kepada masyarakat.
    </p>

    <div class="mt-10 flex justify-center gap-4">
      <a
        href="/profil-pages/sejarah"
        class="px-8 py-3 rounded-lg bg-green-700 hover:bg-green-800 text-white font-medium transition shadow-md"
      >
        Profil Prodi
      </a>

      <a
        href="/akademik"
        class="px-8 py-3 rounded-lg border border-green-700 text-green-700 hover:bg-green-50 font-medium transition"
      >
        Informasi Akademik
      </a>
    </div>

  </div>
</div>
