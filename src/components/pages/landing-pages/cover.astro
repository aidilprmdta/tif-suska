<section class="min-h-screen flex flex-col justify-center items-center text-center px-6 relative overflow-hidden">
  <!-- BACKGROUND -->
  <div id="bg-slideshow" class="absolute inset-0 z-0"></div>

  <!-- CONTENT -->
  <div class="relative z-10">
    <h1 class="text-4xl md:text-6xl font-extrabold text-white drop-shadow-lg animate-fadeInDown">
      Selamat Datang di
      <span class="bg-gradient-to-r from-gray-500 to-purple-600 bg-clip-text text-transparent animate-pulse">
        Prodi Teknik Informatika
      </span>
    </h1>

    <p id="changing-text"
      class="mt-6 text-lg md:text-2xl font-medium text-gray-200 opacity-0 transition-all duration-700">
      Belajar Bersama
    </p>

    <p class="mt-4 font-inter text-base md:text-lg text-gray-300 max-w-2xl mx-auto animate-fadeIn">
      Ruang virtual tempat kita belajar, berbagi cerita, dan tumbuh bersama.  
      Temukan keseruan dan ciptakan memori indah bersama teman-temanmu ðŸš€
    </p>

    <!-- Buttons -->
    <div class="mt-8 flex gap-4 flex-wrap justify-center animate-fadeInUp delay-300">
      <a
        href="#galeri"
        class="bg-gradient-to-r from-pink-500 to-red-500 hover:from-pink-600 hover:to-red-600 text-white px-6 py-3 rounded-full flex items-center gap-2 transition-all shadow-lg hover:shadow-pink-400/50 hover:scale-105">
        Lihat Galeri <ArrowRight size="18" />
      </a>

      <a
        href="#komentar"
        class="bg-gradient-to-r from-purple-500 to-indigo-500 hover:from-purple-600 hover:to-indigo-600 text-white px-6 py-3 rounded-full flex items-center gap-2 transition-all shadow-lg hover:shadow-purple-400/50 hover:scale-105">
        Tinggalkan Komentar <ArrowRight size="18" />
      </a>
    </div>
  </div>

  <!-- Bubbles -->
  <div id="bubble-container" class="absolute inset-0 z-0 overflow-hidden"></div>

  <!-- CLIENT SCRIPT -->
  <script is:client="load">
    const images = JSON.parse(`${JSON.stringify(images)}`);
    const texts = JSON.parse(`${JSON.stringify(texts)}`);

    /* BG SLIDESHOW */
    const bg = document.getElementById("bg-slideshow");
    let index = 0;

    function updateBackground() {
      bg.innerHTML = `
        <img src="${images[index]}" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-b from-black/80 via-black/40 to-black/90"></div>
      `;
      index = (index + 1) % images.length;
    }

    updateBackground();
    setInterval(updateBackground, 6000);

    /* TEXT CHANGE */
    let textIndex = 0;
    const textEl = document.getElementById("changing-text");

    function updateText() {
      textEl.style.opacity = 0;
      setTimeout(() => {
        textEl.innerText = texts[textIndex];
        textEl.style.opacity = 1;
        textIndex = (textIndex + 1) % texts.length;
      }, 500);
    }

    updateText();
    setInterval(updateText, 3000);

    /* BUBBLES */
    const bubbleContainer = document.getElementById("bubble-container");

    function createBubble() {
      const b = document.createElement("div");
      b.className =
        "absolute w-3 h-3 bg-gradient-to-r from-pink-400 to-purple-500 rounded-full opacity-60";
      b.style.left = Math.random() * window.innerWidth + "px";
      b.style.bottom = "-20px";

      const duration = 10 + Math.random() * 10;
      b.style.transition = `all ${duration}s ease-in-out`;

      bubbleContainer.appendChild(b);

      requestAnimationFrame(() => {
        b.style.transform = `translateY(-120vh) translateX(${Math.random() * 200 - 100}px)`;
        b.style.opacity = 0;
      });

      setTimeout(() => b.remove(), duration * 1000);
    }

    setInterval(createBubble, 500);
  </script>

  <!-- ANIMATION CSS -->
  <style>
    .animate-fadeIn { animation: fadeIn 1s ease forwards; }
    .animate-fadeInDown { animation: fadeInDown 1s ease forwards; }
    .animate-fadeInUp { animation: fadeInUp 1s ease forwards; }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</section> -->
